type Tag {
    id: ID! @id @unique
    tag: String! @unique
    messages: [Message]
    count: Int!
}

type Comment {
  id: ID! @id @unique
  comment: String!
  author: String!
  dislikes: Int!
  message: Message
  user: User
  date: String!
}

type Message {
  id: ID! @id @unique
  title: String!
  message: String!
  author: String!
  dislikes: Int!
  comments: [Comment]
  user: User
  date: String
  tags: [Tag]
}

type User {
  id: ID! @id
  email: String! @unique
  username: String! @unique
  firstname: String
  lastname: String
  password: String!
  messages: [Message]
  comments: [Comment]
}